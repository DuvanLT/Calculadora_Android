<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#171717"
    android:padding="10sp"
    >
    <TextView
        android:id="@+id/last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginEnd="@android:dimen/app_icon_size"
        android:textSize="32sp" />
    <EditText
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180sp"
        android:layout_alignParentEnd="true"
        android:hint="0"
        android:background="@null"
        android:inputType="number"
        android:layout_marginEnd="@android:dimen/app_icon_size"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultado"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:textColor="@color/white">

            <Button
                android:id="@+id/clear"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/parentesis"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="()"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <Button
                android:id="@+id/dividir"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/siete"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/ocho"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nueve"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multiplicar"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_buttons3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cuatro"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cinco"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/seis"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/restar"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_buttons4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/uno"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dos"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tres"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sumar"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_buttons5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cero"
                android:layout_width="145sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/black"
                android:onClick="calcular"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <Button
                android:id="@+id/punto"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="8sp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/stroke_button"
                android:onClick="calcular"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/igual"
                android:layout_width="65sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:backgroundTint="@color/orange"
                android:onClick="calcular"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
